	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run main",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/src/main.py",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"args": ["--no-visual", "-p", "micro3.txt"]
		},
		{
			"name": "Run interactive",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/src/main.py",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}",
			"args": ["-i"],
		}
	]
}